<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set the background color of the message bubble -->
    <solid android:color="#2D2D2D"/> <!-- Dark gray for the bubble background -->

    <!-- Define the corner radius to make it rounded -->
    <corners android:radius="16dp"/>

    <!-- Optional padding within the bubble -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
</shape>
