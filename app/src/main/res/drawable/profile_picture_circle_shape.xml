<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Set the color of the circle -->
    <solid android:color="#E0E0E0" /> <!-- Light gray background color -->

    <!-- Optional: Add a border (stroke) around the circle -->
    <stroke
        android:width="2dp"
        android:color="#B0BEC5" /> <!-- Light blue-gray border color -->

    <!-- Optional padding inside the circle (useful if there's an image over it) -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
