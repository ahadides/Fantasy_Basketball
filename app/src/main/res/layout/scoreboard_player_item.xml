<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/teamAPlayerImage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_default_profile" />

            <!-- Player Name -->
            <TextView
                android:id="@+id/teamAPlayerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player A"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/teamAPlayerTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/teamAPlayerPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27.8"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <TextView
            android:id="@+id/playerPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="12dp"
            android:gravity="center"
            android:background="@drawable/rounded_position_background"
            android:paddingVertical="4dp"
            android:paddingHorizontal="8dp"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/teamBPlayerImage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_default_profile" />

            <TextView
                android:id="@+id/teamBPlayerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player B"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/teamBPlayerTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/teamBPlayerPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30.2"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
